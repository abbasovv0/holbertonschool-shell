#!/usr/bin/env bash
#script
PIDFILE=/var/run/my_process.pid
SCRIPT_PATH=/path/to/manage_my_process

case "$1" in
    start)
        "$SCRIPT_PATH" &
        echo $! > "$PIDFILE"
        echo "manage_my_process started"
        ;;
    stop)
        if [ -f "$PIDFILE" ]; then
            PID=$(cat "$PIDFILE")
            kill "$PID" 2>/dev/null || true
            rm -f "$PIDFILE"
            echo "manage_my_process stopped"
        else
            echo "manage_my_process not running"
        fi
        ;;
    restart)
        if [ -f "$PIDFILE" ]; then
            PID=$(cat "$PIDFILE")
            kill "$PID" 2>/dev/null || true
            rm -f "$PIDFILE"
        fi
        "$SCRIPT_PATH" &
        echo $! > "$PIDFILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
